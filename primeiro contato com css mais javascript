       var nome = prompt ("qual seu nome?")
       var idade = prompt("qual sua idade?")
       var cpf = prompt("qual seu cpf?")
       var numero = prompt("qual seu numero de celular?")
    
       var maior_de_idade = idade > 17 
       document.write("o seu nome é: " + nome + "<br>") 
       document.write("o seu cpf é: " + cpf + "<br>") 
       document.write("o seu telefone é: " + numero + "<br>")
       document.write("a sua idade é: " + idade + "<br>")  

    if(maior_de_idade<17){
        document.write("Voce é maior de idade e pode prosseguir")
